<Window x:Class="sampleSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sampleSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="300">
    <StackPanel>
        <Slider x:Name="sampleSlider"/>
        <Label Content="{Binding ElementName=sampleSlider,Path=Value, Mode=TwoWay}"/>
        <TextBox x:Name="textNum" Text="{Binding ElementName=sampleSlider,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Window>
